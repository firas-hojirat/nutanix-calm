vsphere_insecure_connection = true

// vSphere Settings
vsphere_datacenter = "Datacenter"
vsphere_cluster    = "Cluster1"
vsphere_datastore  = "Default"
vsphere_network    = "VM Network"
vsphere_folder     = "templates"

